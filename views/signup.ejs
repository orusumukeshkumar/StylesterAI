<%- include('partials/header') %>

<div class="fluid-container container-bg">
  <h1>SignUp</h1>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <form class="" action="/signup" method="post">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" name="username" class="form-control" value="">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" value="">
            </div>
            <button type="submit" class="btn-btn-dark" name="button">Signup</button>
          </form>


        </div>

      </div>

    </div>

  </div>

</div>
